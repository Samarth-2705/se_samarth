# Flask Configuration
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Database Configuration
DATABASE_URL=mysql+pymysql://username:password@localhost:3306/admission_system
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Security Configuration
SESSION_TIMEOUT=900
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800
PASSWORD_MIN_LENGTH=8

# Email Configuration (SMTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@admissionsystem.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Gateway Configuration (Razorpay)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Application Configuration
APP_NAME=Admission Automation System
APP_VERSION=1.0.0
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# OTP Configuration
OTP_VALIDITY_MINUTES=5
OTP_LENGTH=6

# Choice Filling Configuration
CHOICE_FILLING_DEADLINE=2025-06-30T23:59:59
MAX_CHOICES=10
MIN_CHOICES=1

# Seat Allotment Configuration
ALLOTMENT_ROUNDS=3
SEAT_ACCEPTANCE_DEADLINE_DAYS=7
